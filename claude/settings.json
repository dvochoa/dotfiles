{
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "Read(**)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(mv:*)",
      "Bash(mkdir:*)",
      "Bash(echo:*)",
      "Bash(source:*)",
      "Bash(which:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git status:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)"
    ],
    "deny": [
      "Read(./.env**)",
      "Read(./secrets/**)"
    ],
    "ask": [],
    "additionalDirectories": [
      "~/Desktop/Work"
    ]
  },
  "hooks": {},
  "enabledPlugins": {
    "typescript-lsp@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true
  },
  "outputStyle": "Explanatory",
  "alwaysThinkingEnabled": true
}
